<Window x:Class="ScheduleWPF.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration" Height="320" Width="480" ShowInTaskbar="False" WindowStyle="ToolWindow" DataContext="{Binding}" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            
        </TabControl>
        <StackPanel Margin="2" Grid.Row="1" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Name="buttonClose" Margin="2" Width="60" Click="buttonClose_Click">Close</Button>
        </StackPanel>
    </Grid>
</Window>
